extends layout 


block content
    head 
        link(rel="stylesheet" href='/public/stylesheets/profilePictureForm.css')
    body

    h1 Create account:
    
    each msg in successes
        div.alert_succes
            p= msg
    each err in errors
        div.alert_error 
            p= err
        
    - var prev_values = {};
    if stored.length > 0
        - prev_values = stored[0];

    form(
        action="/user/signup" 
        method="POST"
        enctype="multipart/form-data"
        )   
        div.form-group
            label(for="username") User name:
            input.form-control(
                id="username"
                type="text"
                name="username"
                required='true'
                value=prev_values.username || ""
            )
        div.form-group
            label(for="firstname") First name:
            input.form-control(
                id="firstname"
                type="firstname"
                name="firstname"
                required='true'
                value=prev_values.firstName || ""
            )
        div.form-group
            label(for="lastname") Last name:
            input.form-control(
                id="lastname"
                type="lastname"
                name="lastname"
                required='true'
                value=prev_values.lastName || ""
            )
        div.form-group
            label(for="email") E-mail:
            input.form-control(
                id="email"
                type="email"
                name="email"
                required='true'
                value=prev_values.email || ""
            )
        div.form-group
            label(for="password") Password:
            input.form-control(
                id="password"
                type="password"
                name="password"
                required='true'
            )
        p Upload a profile picture yourself or provide a sentence which will be used to generate a Dall-E image as your avatar.  
        br
        div(class='profile-pic')
            label.-label(for='profilepicture')
                i(class='bx bxs-camera')
                span Upload Image
            input(
                id="profilepicture"
                type="file" 
                name="profilepicture"
                accept="image/png, image/jpeg"
            )
            img(id="profileImage" src=`${process.env.BASE_URL}user/image/${process.env.DEFAULT_PF_ID}` alt="profileImg")
        br
        br
        div.form-group
            label(for="generatesentence") Dall-E Sentence:
            input.form-control(
                id="generatesentence"
                type="text" 
                name="generatesentence"
                value=prev_values.generatesentence || ""
            )
        div.form-group
            input.btn.btn-primary(
                type="submit"
                value="Sign Up"
            )

    script.
        document.addEventListener("start",setNewImage);
        document.getElementById("profilepicture").addEventListener("change", setNewImage);

        function setNewImage(event){
            var image = document.getElementById("profileImage");
            image.src = URL.createObjectURL(event.target.files[0]);
        }